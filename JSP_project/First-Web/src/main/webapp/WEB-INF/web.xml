<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>First-Web</display-name>
	<!-- /contextPath/ 요청일 때 찾을 자원의 파일 이름 -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- 에러페이지 등록 -->
	<!-- http 상태 코드로 등록 -->
	<error-page>
		<error-code>404</error-code>
		<location>/error/error404.jsp</location>
	</error-page>

	<error-page>
		<error-code>500</error-code>
		<location>/error/error500.jsp</location>
	</error-page>

	<!-- 에러 타입으로 등록 -->
	<error-page>
		<exception-type>java.lang.NullPointerException</exception-type>
		<location>/error/errorTypeNull.jsp</location>
	</error-page>
	
	<servlet>
		<servlet-name>Loader</servlet-name>
		<servlet-class>jdbc.util.Loader</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
		<filter>
		<filter-name>LoginCheckFilter</filter-name>
		<filter-class>filter.LoginCheckFilter</filter-class>
		<init-param>
			<param-name>forwardUri</param-name>
			<param-value>/member/loginForm.jsp</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>LoginCheckFilter</filter-name>
		<url-pattern>/member/mypage.jsp/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>LoginCheckFilter</filter-name>
		<url-pattern>/jdbc/*</url-pattern>
	</filter-mapping>

	<context-param>
		<param-name>driver</param-name>
		<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</context-param>

	<listener>
		<listener-class>jdbc.util.JdbcListener</listener-class>
	</listener>
</web-app>
